
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="col-sm-8">
<div class="contact-form">
    <h2 class="title text-center">Bize Ulaşın</h2>
    <div class="status alert alert-success" style="display: none"></div>
    <form id="main-contact-form" class="contact-form row" name="contact-form" method="post" action="/Iletisim/Iletisim">
        <div class="form-group col-md-12">
            <input type="text" name="isim" class="form-control" required="required" placeholder="İsminiz">
        </div>
        <div class="form-group col-md-12">
            <input type="text" name="mail" class="form-control" required="required" placeholder="Mail Adresiniz ">
        </div>
        <div class="form-group col-md-12">
            <input type="text" name="telefon" class="form-control" required="required" placeholder="Telefon ">
        </div>
        <div class="form-group col-md-12">
            <textarea name="mesaj" id="message" required="required" class="form-control" rows="8" placeholder="Mesajınız"></textarea>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Gönder">
        </div>
    </form>
</div>
    </div>
